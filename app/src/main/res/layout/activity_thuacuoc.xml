<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playGame"
    android:background="#2095F5"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Điểm: 10"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="182dp"
            android:layout_height="164dp"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            app:srcCompat="@drawable/thua" />

        <TextView
                android:id="@+id/txttongso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vượt qua 1/100 câu. Bạn ngu hơn 99% người chơi"
                android:padding="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:ems="10"
                android:gravity="center"
                android:hint="Tên của Bạn"
                android:inputType="text"
                android:padding="18dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnThem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/confirm_btn"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Thêm thành tích"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="#2095F5"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnChoilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="25dp"
            android:layout_margin="20dp"
            android:text=" CAY QUÁ, CHƠI LẠI PHÁT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/wrong_option" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/mybutton"
                android:gravity="center"
                android:padding="20dp"
                android:text="Menu"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>